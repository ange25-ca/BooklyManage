doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css", rel="stylesheet")
    
    link(rel="stylesheet", href="/css/search.css")
    title BooklyMange
  body 
    block content
      header.header 
        div.menu.container
          a(href="#" class="logo") 
            i(class="ri-book-read-line") BooklyManage
          input(type="checkbox", id="menu")
          label(for="menu")
            i.menu-icon(class="ri-menu-line")
          nav.navbar
            ul.ulnavbar 
              li 
                a(href="/")
                  i(class="ri-home-2-line")
              li  
                a(href="#")
                  i(class="ri-heart-3-line")
              li 
                a(href="/catalogo") My library
      div.general-container
        div.information-search
          h1 #{title}
        form(action='/buscar-libro', method='GET' class='search-bar')
          input(type='text', name='q',class='inputSearch' placeholder='Buscar libro...')
          button(type='submit', class='buttonSearch')
            i(class="ri-search-eye-line")
